{
	"info": {
		"name": "Todo App API",
		"description": "Complete API collection for Todo App with authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/register",
							"host": ["{{baseUrl}}"],
							"path": ["register"]
						}
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/login",
							"host": ["{{baseUrl}}"],
							"path": ["login"]
						}
					}
				}
			]
		},
		{
			"name": "Todos",
			"item": [
				{
					"name": "Get All Todos",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/todo",
							"host": ["{{baseUrl}}"],
							"path": ["todo"]
						}
					}
				},
				{
					"name": "Create Todo",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Sample Todo\",\n  \"description\": \"This is a sample todo item\",\n  \"done\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/todo",
							"host": ["{{baseUrl}}"],
							"path": ["todo"]
						}
					}
				},
				{
					"name": "Update Todo",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Todo\",\n  \"description\": \"This todo has been updated\",\n  \"done\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/todo/{{todoId}}",
							"host": ["{{baseUrl}}"],
							"path": ["todo", "{{todoId}}"]
						}
					}
				},
				{
					"name": "Delete Todo",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/todo/{{todoId}}",
							"host": ["{{baseUrl}}"],
							"path": ["todo", "{{todoId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Server Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8000/",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8000",
							"path": [""]
						}
					}
				}
			]
		}
	]
}
